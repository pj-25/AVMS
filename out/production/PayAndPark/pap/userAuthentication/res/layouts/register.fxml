<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane fx:id="mainPane" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pap.papUser.controller.RegisterController">
   <children>
      <ScrollPane fitToWidth="true">
         <content>
            <StackPane>
               <children>
                  <VBox alignment="CENTER" prefHeight="371.0" prefWidth="456.0" spacing="10.0" style="-fx-background-color: #434343;">
                     <children>
                        <ImageView fitHeight="300.0" fitWidth="400.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../../papUser/res/images/register.png" />
                           </image>
                        </ImageView>
                        <Label id="pageTitle" text="Register" textFill="#03cd7f">
                           <font>
                              <Font name="System Bold" size="30.0" />
                           </font>
                        </Label>
                        <HBox alignment="TOP_CENTER" spacing="10.0">
                           <children>
                              <Label text="User Id" />
                              <TextField fx:id="userId" />
                           </children>
                        </HBox>
                        <HBox alignment="TOP_CENTER" layoutX="10.0" layoutY="221.0" spacing="10.0">
                           <children>
                              <Label text="Create Password" />
                              <PasswordField fx:id="password" />
                           </children>
                        </HBox>
                        <HBox alignment="TOP_CENTER" layoutX="30.0" layoutY="286.0" spacing="10.0">
                           <children>
                              <Label text="Verify Password " />
                              <PasswordField fx:id="cpassword" />
                           </children>
                        </HBox>
                        <HBox alignment="TOP_CENTER" layoutX="30.0" layoutY="236.0" spacing="10.0">
                           <children>
                              <Label text="First Name" />
                              <TextField fx:id="firstName" />
                           </children>
                        </HBox>
                        <HBox alignment="TOP_CENTER" layoutX="30.0" layoutY="236.0" spacing="10.0">
                           <children>
                              <Label text="Last Name" />
                              <TextField fx:id="lastName" />
                           </children>
                        </HBox>
                        <HBox alignment="TOP_CENTER" layoutX="30.0" layoutY="380.0" spacing="10.0">
                           <children>
                              <Label text="Age" />
                              <TextField fx:id="age" />
                           </children>
                        </HBox>
                        <HBox alignment="TOP_CENTER" layoutX="30.0" layoutY="488.0" spacing="10.0">
                           <children>
                              <Label text="User Type" />
                              <ChoiceBox fx:id="userType" prefWidth="150.0" />
                           </children>
                        </HBox>
                        <HBox alignment="TOP_CENTER" layoutX="30.0" layoutY="452.0" spacing="10.0">
                           <children>
                              <Label text="Address Line" />
                              <TextField fx:id="addressLine" />
                           </children>
                        </HBox>
                        <HBox alignment="TOP_CENTER" layoutX="30.0" layoutY="524.0" spacing="10.0">
                           <children>
                              <Label text="City" />
                              <TextField fx:id="city" />
                           </children>
                        </HBox>
                        <HBox alignment="TOP_CENTER" layoutX="30.0" layoutY="560.0" spacing="10.0">
                           <children>
                              <Label text="State" />
                              <TextField fx:id="state" />
                           </children>
                        </HBox>
                        <HBox alignment="TOP_CENTER" layoutX="30.0" layoutY="596.0" spacing="10.0">
                           <children>
                              <Label text="Country" />
                              <TextField fx:id="country" />
                           </children>
                        </HBox>
                        <HBox alignment="TOP_CENTER" layoutX="30.0" layoutY="632.0" spacing="10.0">
                           <children>
                              <Label text="ZipCode" />
                              <TextField fx:id="zipcode" />
                           </children>
                        </HBox>
                        <HBox alignment="TOP_CENTER" layoutX="30.0" layoutY="632.0" spacing="10.0">
                           <children>
                              <Label text="Email ID" />
                              <TextField fx:id="emailId" />
                           </children>
                        </HBox>
                        <HBox alignment="TOP_CENTER" layoutX="30.0" layoutY="668.0" spacing="10.0">
                           <children>
                              <Label text="Phone Number" />
                              <TextField fx:id="phoneNumber" />
                           </children>
                        </HBox>
                        <HBox alignment="TOP_CENTER" layoutX="30.0" layoutY="740.0" spacing="10.0">
                           <children>
                              <Label text="Gender" />
                              <RadioButton fx:id="male" mnemonicParsing="false" text="M" />
                              <RadioButton fx:id="female" layoutX="195.0" layoutY="10.0" mnemonicParsing="false" text="F" />
                              <RadioButton fx:id="other" layoutX="254.0" layoutY="10.0" mnemonicParsing="false" text="Other" />
                           </children>
                        </HBox>
                        <Button fx:id="registerBtn" mnemonicParsing="false" onAction="#register" text="Register" />
                        <Separator prefWidth="200.0" />
                        <Label text="Already have an account?" />
                        <Button fx:id="loginBtn" mnemonicParsing="false" onAction="#login" text="Login" />
                     </children>
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                  </VBox>
               </children>
            </StackPane>
         </content>
      </ScrollPane>
   </children>
</StackPane>
