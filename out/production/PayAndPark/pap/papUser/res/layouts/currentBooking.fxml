<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox fx:id="viewPaneChild" alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pap.papUser.controller.CurrentBookingController">
    <children>
        <Label id="pageTitle" text="Current Booking" textFill="#03cd7f">
            <font>
                <Font name="System Bold" size="30.0" />
            </font>
        </Label>
        <Separator prefWidth="200.0" />
        <HBox alignment="CENTER" spacing="10.0">
            <children>
                <ImageView fitHeight="300.0" fitWidth="400.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../images/parking-ticket(1).png" />
                    </image>
                </ImageView>
                <VBox fx:id="bookingData" alignment="CENTER" prefHeight="371.0" prefWidth="456.0" spacing="10.0" style="-fx-background-color: #434343;">
                    <children>
                        <HBox spacing="10.0">
                            <children>
                                <Label text="Booking Id:" />
                                <Label fx:id="bookingID" />
                            </children>
                        </HBox>
                        <HBox layoutX="30.0" layoutY="236.0" spacing="10.0">
                            <children>
                                <Label text="Vehicle ID:" />
                                <Label fx:id="vehicleID" layoutX="10.0" layoutY="10.0" />

                            </children>
                        </HBox>
                        <HBox layoutX="30.0" layoutY="236.0" spacing="10.0">
                            <children>
                                <Label text="Parking Space ID:" />
                                <Label fx:id="parkingSpaceID" layoutX="10.0" layoutY="10.0" />

                            </children>
                        </HBox>
                        <HBox layoutX="30.0" layoutY="380.0" spacing="10.0">
                            <children>
                                <Label text="Slot ID:" />
                                <Label fx:id="slotID" layoutX="10.0" layoutY="10.0" />

                            </children>
                        </HBox>
                        <HBox layoutX="30.0" layoutY="488.0" spacing="10.0">
                            <children>
                                <Label text="Booked On:" />
                                <Label fx:id="bookedOn" layoutX="10.0" layoutY="10.0" />

                            </children>
                        </HBox>
                        <HBox layoutX="30.0" layoutY="452.0" spacing="10.0">
                            <children>
                                <Label text="Reserved Till:" />
                                <Label fx:id="reservedTill" layoutX="10.0" layoutY="10.0" />

                            </children>
                        </HBox>
                  <Button fx:id="checkoutBtn" alignment="CENTER_RIGHT" mnemonicParsing="false" onAction="#checkout" text="Checkout" />
                        
                    </children>
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                </VBox>
            </children>
            <VBox.margin>
                <Insets />
            </VBox.margin>
        </HBox>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</VBox>
