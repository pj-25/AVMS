<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="10.0" style="-fx-background-color: #434343;" xmlns="http://javafx.com/javafx/8.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="avms.userProfile.controller.EditProfileController">
    <children>
        <Label id="pageTitle" text="Edit Profile" textFill="#03cd7f">
            <font>
                <Font name="System Bold" size="30.0" />
            </font>
        </Label>
        <Separator prefWidth="200.0" />
        <ImageView fitHeight="300.0" fitWidth="400.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../images/edit.png" />
            </image>
        </ImageView>
        <GridPane alignment="TOP_CENTER" vgap="10.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>

            <children>
                <Label text="User Id" />
                <Label text="New Password" GridPane.rowIndex="1" />
                <PasswordField fx:id="newPassword" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Label text="Verify Password " GridPane.rowIndex="2" />
                <PasswordField fx:id="cpassword" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <Label text="First Name" GridPane.rowIndex="3" />
                <TextField fx:id="firstName" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                <Label text="Last Name" GridPane.rowIndex="4" />
                <TextField fx:id="lastName" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                <Label text="Age" GridPane.rowIndex="5" />
                <TextField fx:id="age" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                <Label text="Address Line" GridPane.rowIndex="6" />
                <TextField fx:id="addressLine" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                <Label text="City" GridPane.rowIndex="7" />
                <TextField fx:id="city" GridPane.columnIndex="1" GridPane.rowIndex="7" />
                <Label text="State" GridPane.rowIndex="8" />
                <TextField fx:id="state" GridPane.columnIndex="1" GridPane.rowIndex="8" />
                <Label text="Country" GridPane.rowIndex="9" />
                <TextField fx:id="country" GridPane.columnIndex="1" GridPane.rowIndex="9" />
                <Label text="ZipCode" GridPane.rowIndex="10" />
                <TextField fx:id="zipcode" GridPane.columnIndex="1" GridPane.rowIndex="10" />
                <Label text="Email ID" GridPane.rowIndex="11" />
                <TextField fx:id="emailId" GridPane.columnIndex="1" GridPane.rowIndex="11" />
                <Label text="Phone Number" GridPane.rowIndex="12" />
                <TextField fx:id="phoneNumber" GridPane.columnIndex="1" GridPane.rowIndex="12" />
                <Label text="Gender" GridPane.rowIndex="13" />
                <HBox spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="13">
                    <children>
                        <RadioButton fx:id="male" mnemonicParsing="false" text="M" />
                        <RadioButton fx:id="female" mnemonicParsing="false" text="F" />
                        <RadioButton fx:id="other" mnemonicParsing="false" text="Other" />
                    </children>
                </HBox>
            <Label fx:id="userId" GridPane.columnIndex="1" />
            </children>
            <rowConstraints>
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
            <RowConstraints />
            <RowConstraints />
                    
            </rowConstraints>
            <VBox.margin>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </VBox.margin>
        </GridPane>

        <Button fx:id="editBtn" mnemonicParsing="false" onAction="#verifyPassword" text="Edit Profile" />
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />

    </padding>
</VBox>
